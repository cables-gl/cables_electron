{
  "name": "cables_electron",
  "version": "0.0.3",
  "author": "undefined development",
  "description": "current templates for the different exe-exports in cables.gl",
  "repository": {
    "type": "git",
    "url": "git@github.com:cables-gl/cables_electron.git"
  },
  "license": "MIT",
  "main": "src/electron/main.js",
  "type": "module",
  "engines": {
    "node": "20.13.1"
  },
  "scripts": {
    "start": "cross-env npm_config_apiconfig=local gulp watch",
    "build": "cross-env npm_config_apiconfig=local gulp build",
    "pack": "electron-builder -mwl --dir",
    "pack:mac": "electron-builder -m --dir -c.mac.identity=null",
    "pack:win": "electron-builder -w --dir",
    "pack:linux": "electron-builder -l --dir",
    "dist": "electron-builder -mwl",
    "dist:mac": "electron-builder -m",
    "dist:win": "electron-builder -w",
    "dist:linux": "electron-builder -l"
  },
  "build": {
    "productName": "cables",
    "appId": "gl.cables.standalone",
    "nodeVersion": "20.13.1",
    "asar": true,
    "files": [
      "cables.json",
      "src/**/*",
      "src_client/**/*",
      "index.html",
      "dist/ui/**/*",
      "dist/ops/**/*",
      "dist/public/**/*",
      "LICENCE",
      {
        "from": "resources/assets/",
        "to": "resources/assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "resources/build"
    },
    "fileAssociations": [
      {
        "ext": "cables.json",
        "name": "cables patch",
        "description": "cables patch",
        "role": "Editor",
        "rank": "Owner"
      },
      {
        "ext": "cables",
        "name": "cables patch",
        "description": "cables patch",
        "role": "Editor",
        "rank": "Owner"
      }
    ],
    "mac": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "notarize": {
        "teamId": "3HHYN68G6F"
      },
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/build/entitlements.mac.plist",
      "entitlementsInherit": "resources/build/entitlements.mac.plist",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "artifactName": "${productName}-${version}-${os}.${ext}",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${os}.${ext}"
    },
    "publish": [
      "github"
    ]
  },
  "dependencies": {
    "cables-shared-api": "file:../shared/api",
    "cables-shared-client": "file:../shared/client",
    "chokidar": "3.6.0",
    "electron-localshortcut": "3.2.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.27.5",
    "execa": "8.0.1",
    "fs-extra": "11.2.0",
    "image-size": "1.0.2",
    "jsonfile": "6.1.0",
    "marked": "12.0.2",
    "mkdirp": "2.1.3",
    "moment": "2.30.1",
    "npm": "10.5.2",
    "pako": "2.1.0",
    "project-name-generator": "2.1.9",
    "sanitize-filename": "1.6.3",
    "uuid-v4": "0.1.0"
  },
  "devDependencies": {
    "copy-webpack-plugin": "12.0.2",
    "cross-env": "5.2.0",
    "electron": "30.0.6",
    "electron-builder": "24.13.3",
    "electron-notarize": "1.2.2",
    "git-last-commit": "1.0.1",
    "gulp": "5.0.0",
    "terser-webpack-plugin": "5.3.10",
    "webpack": "5.91.0"
  }
}
